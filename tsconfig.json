{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./app/*"],
      "assets/*": ["./assets/*"],
      "three": ["./node_modules/three"],
      "three/*": ["./node_modules/three/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["three"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
